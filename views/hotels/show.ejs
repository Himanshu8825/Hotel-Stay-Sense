<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>

        <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet">
        <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
        <style>
            #map {
                margin: auto;
                width: 50%;
                height: 18rem;
                border: 2px solid red;
            }
        </style>

        <h1>Show - Page</h1>

        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% for( let idx in hotel.image ) { %>
                                <div class="carousel-item <%= idx==0?'active':'' %>">
                                    <img class="d-block w-100" src="<%= hotel.image[idx] %>">
                                </div>
                                <% } %>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    <strong>Name</strong>
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse "
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.name %>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <strong>Price Of The Hotel</strong>
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.price %>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    <strong>Address Of The Hotel</strong>
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.address %>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                    <strong>Description Of The Hotel</strong>
                                </button>
                            </h2>
                            <div id="collapseFour" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.description %>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                    <strong>Created-At</strong>
                                </button>
                            </h2>
                            <div id="collapseFive" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.createAt.toDateString() %>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                    <strong>Average Review</strong>
                                </button>
                            </h2>
                            <div id="collapseSix" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <%= hotel.averageRatings %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 d-flex">
                        <a href="/hotels/<%=hotel._id%>/edit" class="btn btn-warning me-3">Edit</a>
                        <form action="/hotels/<%= hotel._id %>?_method=delete" method="post">
                            <input type="submit" value="Delete" class="btn btn-danger ">
                        </form>
                    </div>
                    <div class="mt-3">
                        <a href="/hotels/<%= hotel._id %>/reviews/new" class="btn btn-primary">add a review</a>
                        <a href="/hotels/<%= hotel._id %>/checkout" class="btn btn-success">Book Now</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="mt-6">Reviews</h1>
                    <% for( let review of hotel.reviews) { %>
                        <div class="card">
                            <div class="card-header">
                                Featured
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= review.tittle %>
                                </h5>
                                <p class="card-text">
                                    <%= review.body %>
                                </p>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: <%= 20*review.stars%>%"
                                        aria-valuenow="<%= 20*review.stars%>" aria-valuemin="0" aria-valuemax="5">
                                        <%= review.stars %>
                                    </div>
                                </div>
                                <div class="d flex">
                                    <a href="/hotels/<%= hotel._id %>/reviews/<%= review._id %>/edit"
                                        class="btn btn-warning btn-sm mt-3">Edit</a>


                                    <form action="/hotels/<%= hotel._id %>/reviews/<%= review._id %>?_method=delete"
                                        method="post">
                                        <input type="submit" value="delete" class="btn btn-danger btn-sm mt-3">
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <%= review.user %>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
            <div id="map"></div>
        </div>
        <script>
            

            mapboxgl.accessToken =
                'pk.eyJ1Ijoid2ViYnJvcyIsImEiOiJja2o5enI5aWsyNDl1MnlucTBtaXlzY3o5In0.LPF_COzRlojiJbb4Sbflaw';
            const map = new mapboxgl.Map({
                container: 'map',
                // Choose from Mapbox's core styles, or make your own style with Mapbox Studio
                style: 'mapbox://styles/mapbox/streets-v12',
                center: [<%-hotel.Location.coordinates%>],
                zoom: 8

            });
            // Create a default Marker and add it to the map.
            const marker1 = new mapboxgl.Marker({color:'red'})
                    .setLngLat([<%-hotel.Location.coordinates%>])
                    .addTo(map);
            
        </script>

        <%- include('../partials/footer') %>